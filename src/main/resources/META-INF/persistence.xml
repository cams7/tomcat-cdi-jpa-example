<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="app-pu" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!--non-jta-data-source>${app.persistence.jta.data.source}</non-jta-data-source -->
		<jta-data-source>${app.persistence.jta.data.source}</jta-data-source>		
		<!-- propriedade especial do Hibernate -->
		<properties>
			<property name="hibernate.dialect" value="${app.persistence.hibernate.dialect}" />
			<!-- Properties for Hibernate -->
			<property name="hibernate.hbm2ddl.auto" value="${app.persistence.hibernate.hbm2ddl.auto}" />
			<property name="hibernate.show_sql" value="${app.persistence.hibernate.show_sql}" />
		</properties>
	</persistence-unit>
</persistence>
